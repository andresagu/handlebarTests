<h1>Burgers!</h1>

<h2>Burgers not eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="dev">Devour now?</label><br>
    <input type="radio" name="devour" value="1" checked> Yes!<br>
    <input type="radio" name="devour" value="0"> No!
  </div>

  <button type="submit">Add burger</button>
</form>
